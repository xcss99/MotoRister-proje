<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - otoservistakipprogrami2025</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/otoservistakipprogrami2025.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        @if (Context.Session.GetString("UserName") != null)
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Admin")">Oto Teknik Servis</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Ana Panel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Musteri" asp-action="Index">Müşteriler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Aracs" asp-action="Index">Araçlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ServisKaydis" asp-action="Index">Servis Kayıtları</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Parcas" asp-action="Index">Parçalar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ParcaKullanimis" asp-action="Index">Parça Kullanımları</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link btn btn-success btn-sm me-2" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> Admin Panel
                                </a>
                            </li>
                            <li class="nav-item">
                                <span class="navbar-text me-3">Hoş geldin: @Context.Session.GetString("KullaniciAdi")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light btn-sm" href="@Url.Action("CikisYap", "Admin")">Çıkış</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - otoservistakipprogrami2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>