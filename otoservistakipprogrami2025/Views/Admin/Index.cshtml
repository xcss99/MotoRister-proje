@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Section -->
<div class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-1 font-weight-bold">MotoRister</h1>
                <p class="mb-0 text-light">Servisinizin En Yakın Takipçisi</p>
            </div>
            <div class="col-md-4 text-md-right">
                <span class="badge badge-light px-3 py-2">
                    <i class="fas fa-user-circle"></i> @Context.Session.GetString("KullaniciAdi")
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Navigation Bar -->
<div class="container mb-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded shadow-sm">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link px-4 py-2" href="@Url.Action("Index", "Musteri")">
                            <i class="fas fa-user-friends text-primary"></i>
                            <span class="ms-2">Müşteri Merkezi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4 py-2" href="@Url.Action("Index", "ServisKaydis")">
                            <i class="fas fa-clipboard-check text-success"></i>
                            <span class="ms-2">Servis İzleme</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4 py-2" href="@Url.Action("Index", "Aracs")">
                            <i class="fas fa-car-side text-info"></i>
                            <span class="ms-2">Araç Dosyası</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4 py-2" href="@Url.Action("Index", "Parcas")">
                            <i class="fas fa-boxes text-warning"></i>
                            <span class="ms-2">Stok Kontrolü</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-4 py-2" href="@Url.Action("Index", "ParcaKullanimis")">
                            <i class="fas fa-chart-line text-danger"></i>
                            <span class="ms-2">İşlem Raporları</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Kontrol Paneli</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", "Musteri")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="icon-circle bg-primary text-white me-3">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Müşteri Merkezi</div>
                            <small class="text-muted">Müşteri bilgileri</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index", "ServisKaydis")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="icon-circle bg-success text-white me-3">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Servis İzleme</div>
                            <small class="text-muted">Aktif işlemler</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index", "Aracs")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="icon-circle bg-info text-white me-3">
                            <i class="fas fa-car-side"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Araç Dosyası</div>
                            <small class="text-muted">Araç kayıtları</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index", "Parcas")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="icon-circle bg-warning text-white me-3">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <div>
                            <div class="fw-bold">Stok Kontrolü</div>
                            <small class="text-muted">Parça yönetimi</small>
                        </div>
                    </a>
                    <a href="@Url.Action("Index", "ParcaKullanimis")" class="list-group-item list-group-item-action d-flex align-items-center py-3">
                        <div class="icon-circle bg-danger text-white me-3">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div>
                            <div class="fw-bold">İşlem Raporları</div>
                            <small class="text-muted">Kullanım analizi</small>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-circle bg-primary text-white me-3" style="width: 50px; height: 50px;">
                            <i class="fas fa-home"></i>
                        </div>
                        <div>
                            <h2 class="mb-1">Yönetim Merkezi</h2>
                            <p class="text-muted mb-0">MotoRister servis yönetim sistemine hoş geldiniz</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card bg-gradient-primary text-white border-0 h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fas fa-check-circle fa-2x me-3"></i>
                                        <h5 class="mb-0">Aktif Sistemler</h5>
                                    </div>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Müşteri Yönetim Sistemi</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Araç Takip Modülü</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Servis İzleme Paneli</li>
                                        <li class="mb-2"><i class="fas fa-check me-2"></i>Stok Kontrol Sistemi</li>
                                        <li class="mb-0"><i class="fas fa-check me-2"></i>Raporlama Modülü</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="card bg-gradient-success text-white border-0 h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fas fa-user-shield fa-2x me-3"></i>
                                        <h5 class="mb-0">Hoş Geldiniz!</h5>
                                    </div>
                                    <p class="mb-3">Merhaba <strong>@Context.Session.GetString("KullaniciAdi")</strong></p>
                                    <p class="mb-3">Sol menüden istediğiniz bölüme hızlıca erişebilir, üst navigasyon barını kullanarak modüller arası geçiş yapabilirsiniz.</p>
                                    <div class="mt-auto">
                                        <small><i class="fas fa-clock me-1"></i>Son giriş: Bugün</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Stats Row -->
                    <div class="row mt-4">
                        <div class="col-md-3 mb-3">
                            <div class="card text-center border-primary">
                                <div class="card-body">
                                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                    <h6 class="card-title">Müşteriler</h6>
                                    <a href="@Url.Action("Index", "Musteri")" class="btn btn-primary btn-sm">Görüntüle</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-center border-success">
                                <div class="card-body">
                                    <i class="fas fa-tools fa-2x text-success mb-2"></i>
                                    <h6 class="card-title">Servis İşlemleri</h6>
                                    <a href="@Url.Action("Index", "ServisKaydis")" class="btn btn-success btn-sm">Görüntüle</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-center border-info">
                                <div class="card-body">
                                    <i class="fas fa-car fa-2x text-info mb-2"></i>
                                    <h6 class="card-title">Araç Kayıtları</h6>
                                    <a href="@Url.Action("Index", "Aracs")" class="btn btn-info btn-sm">Görüntüle</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card text-center border-warning">
                                <div class="card-body">
                                    <i class="fas fa-box fa-2x text-warning mb-2"></i>
                                    <h6 class="card-title">Stok Durumu</h6>
                                    <a href="@Url.Action("Index", "Parcas")" class="btn btn-warning btn-sm">Görüntüle</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-to-r {
        background: linear-gradient(90deg, #1e3a8a, #1d4ed8);
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .nav-link {
        transition: all 0.3s ease;
        border-radius: 8px;
        margin: 0 5px;
    }

        .nav-link:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .list-group-item:hover {
        transform: translateX(5px);
        transition: all 0.3s ease;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
</style>